<UserControl x:Class="Test_WPF.CourseInformations"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Border BorderBrush="Silver" BorderThickness="2">
            <Border.Effect>
                <DropShadowEffect BlurRadius="5" ShadowDepth="6" RenderingBias="Quality" />
            </Border.Effect>
        </Border>
        <Label Content="Informations sur le cours" Height="Auto" HorizontalAlignment="Center" Margin="0,17,0,0" Name="titleLabel" VerticalAlignment="Top" FontSize="20" FontWeight="Bold" Width="Auto" Foreground="#FF257900" FontFamily="Palatino Linotype" />
    </Grid>
</UserControl>
