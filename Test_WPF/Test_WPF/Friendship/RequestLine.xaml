<UserControl x:Class="Test_WPF.Friendship.RequestLine"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="43" d:DesignWidth="311">
    <Grid>
        <Label Content="Label" Height="Auto" HorizontalAlignment="Left" Margin="10,0,0,0" Name="lUsername" VerticalAlignment="Top" Width="Auto" Foreground="DarkMagenta" FontSize="24" />
        <Label Content="Label" Height="Auto" HorizontalAlignment="Right" HorizontalContentAlignment="Right" Margin="0,0,90,0" Name="lGrade" VerticalAlignment="Top" Width="Auto" Foreground="DarkMagenta" FontSize="24" FontWeight="Normal" />
        <Button Content="Accepter" Height="Auto" HorizontalAlignment="Right" Margin="0,0,10,0" Name="bAccept" VerticalAlignment="Top" Width="Auto" FontSize="14" Foreground="ForestGreen" Click="bAccept_Click"/>
    </Grid>
</UserControl>
